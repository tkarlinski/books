{% extends 'base.html.twig' %}

{% block title %}Miejsca wydania{% endblock %}

{% block body %}

    {% include '_layout/list_header.html.twig' with {'header': 'Miejsca wydania', 'path_add': 'app_city_new'} %}

    <table class="table rounded table-bordered">
        <thead>
        <tr>
            <th scope="col">Miasto</th>
            <th scope="col" class="w-25">Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.name }}</td>
                <td class="w-25">
                    <a class="btn btn-outline-primary btn-sm"
                       href="{{ path('app_city_edit', {'id': city.id}) }}">edytuj</a>
                    <a class="btn btn-outline-primary btn-sm"
                       href="{{ path('app_city_delete', {'id': city.id}) }}">usu≈Ñ</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">brak danych</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
